@model ESkript.Models.Script

@{
    ViewBag.Title = "Skript veröffentlichen";
}

<h2>Skript veröffentlichen</h2>

<h3>Wollen Sie wirklich das Skript @Html.DisplayFor(s => s.Subject) veröffentlichen?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Autor
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Account.FirstName) @Html.DisplayFor(model => model.Account.LastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Subject)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Subject)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CreationDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreationDate)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <button type="submit" class="btn btn-default btn-lg">
                <span class="glyphicon glyphicon-cloud-upload"></span> Veröffentlichen
            </button>
        </div>
    }
</div>
<br />
<br />
<br />
<hr />
<div>
    @Html.ActionLink("Zurück", "Index", "Home")
</div>
