@model IEnumerable<ESkript.Models.ImageCard>

@foreach (var item in Model) {
    <div style="position: relative; left: 30px;">
        <h4>
            Bild:
            <button type="button"
                    class="btn btn-info btn-sm"
                    onclick="location.href='@Url.Action("Delete", "ImageCard", new { id = item.IdImageCard })'">
                <span class="glyphicon glyphicon-trash"></span> Löschen
            </button>
        </h4>
        <img src="data:image/png;base64,@Convert.ToBase64String(item.Image,0,item.Image.Length)" width="500" />
    </div>
}


