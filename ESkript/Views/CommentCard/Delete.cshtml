<script type="text/javascript" src="http://cdn.mathjax.org/mathjax/latest/MathJax.js?config=TeX-AMS-MML_HTMLorMML"></script>
@model ESkript.Models.CommentCard

@{
    ViewBag.Title = "Kommentar löschen?";
}

<h3>Wollen Sie wirklich den Text löschen?</h3>
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    <div class="form-actions no-color">
        <div class="form-actions no-color">
            <button type="submit" value="Löschen" class="btn btn-default btn-lg">
                <span class="glyphicon glyphicon-trash"></span> Löschen
            </button>
        </div>
    </div>
}
<div>
    <hr />
    <div>
        <h2>@Html.DisplayFor(model => model.ScriptContent1.Titel)</h2>
    </div>
    <div>
        @Html.DisplayFor(model => model.Text)
    </div>
    <br />
    <br />
    <br />
</div>
<br />
<br />
<br />
<hr />
<div>
    @Html.ActionLink("Zurück", "Read", "ScriptContent", new { id = Model.ScriptContent1.Script }, null)
</div>
